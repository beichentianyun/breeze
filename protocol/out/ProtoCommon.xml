<?xml version="1.0" encoding="UTF-8"?>

<ProtoTraits>
  <MinNo>20100</MinNo>
  <MaxNo>20200</MaxNo>
  <UseLog4z>0</UseLog4z>
</ProtoTraits>


<Proto>

    <!-- 这里是配置统一的错误代码 -->
    <const name="EC_SUCCESS" value="0" type="ui16"  desc="成功"/>
    <const name="EC_UNKOWN_ERROR" value="1"  type="ui16" desc="未知错误"/>
    <const name="EC_SERVER_ERROR"  value="2" type="ui16" desc="服务器内部错误"/>
    <const name="EC_AUTH_NOT_FOUND" value="3"  type="ui16" desc="认证错误:找不到用户名"/>
    <const name="EC_AUTH_ERROR"  value="4" type="ui16" desc="认证失败"/>
    <const name="EC_AUTH_ING"  value="5" type="ui16" desc="正在认证中..."/>
    <const name="EC_AUTH_DOUBLE"  value="6" type="ui16" desc="重复认证"/>
    <const name="EC_KEY_NOTFOUND"  value="7" type="ui16" desc="KEY找不到"/>


  <!-- 用户角色信息 -->
  <struct name="CharactorInfo" desc="角色信息">
    <member name="accountName" type="string"   desc=""/>
    <member name="accountID" type="ui64"   desc=""/>
    <member name="charName" type="string"   desc=""/>
    <member name="charID" type="ui64"   desc=""/>
  </struct>

  <!-- 客户端存活脉冲  该协议属于需要认证的协议 所以如果客户端连接到服务器在一个脉冲周期内未能认证成功 就会被踢掉-->
  <proto from="C" to="AS" name="ClientPulse" desc= "客户端存活脉冲">
  </proto>

  <!-- 客户端存活脉冲应答 -->
  <proto from="AS" to="C" name="ClientPulseAck" desc= "客户端存活脉冲应答">
    <member name="svrTimeStamp" type="ui64"   desc="服务器当前UTC时间戳"/>
  </proto>

</Proto>

